name:                   pfq-htests
version:                6.0

license-file:           LICENSE
author:                 Nicola Bonelli
maintainer:             nicola@pfq.io
category:               Utils
build-type:             Simple
cabal-version:          >=1.10

Executable test-bloom
    main-is:            test-bloom.hs
    build-depends:      base >= 4.7, 
                        pfq >= 6.0
    extra-libraries:    pfq
    ghc-options:
        -O2
        -threaded
        -rtsopts
    default-language:   Haskell2010

